class Solution {
    public int findJudge(int N, int[][] trust) {
        
        int[] arr = new int[N+1];
      
        
        for(int i=0;i<trust.length;i++) {
            
            arr[trust[i][1]]++;
            arr[trust[i][0]]--;
        }
        
        for(int i=1;i<=N;i++) {
            
            if(arr[i] == N-1)
                return i;
        }
        return -1;
    }
}
